{{#if addNewAnswer}}
<h1>New Review</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="response">Solution</label>
        {{input value=response id="response"}}
      </div>

      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'AnswerForm'}}>New response</button>
{{/if}}
